@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = null;

}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>

        @@import url('https://fonts.googleapis.com/css?family=Raleway|Roboto+Slab');
    </style>
    <title>SoftClient</title>
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/estilo.css" rel="stylesheet">

</head>
<body>
    <section id="acesso">
        <div class="container-fluid">

            <div class="col-md-6" id="cliente">
                <div class="col-md-12" id="ladoA">
                    <h1>SOFT</h1>
                </div>
                <div class="col-md-12">
                    <h3>Sou Cliente</h3>
                        <div class="form-group">
                            <label class="col-sm-3">Login:</label>
                            <div class="col-sm-7">
                                <input name="Login" class="form-control form-control-sm" placeholder="Seu usuário" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3">&nbsp;&nbsp;&nbsp;Email:</label>
                            <div class="col-sm-7">
                                <input name="Senha" type="password" class="form-control form-control-sm" placeholder="Sua senha" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-8">
                                <a asp-page="/Cliente" class="btn btn-custom btn-lg btn-block">Entrar</a>
                            </div>
                        </div>
                </div>
            </div>
            <div class="col-md-6" id="funcionario">
                <div class="col-md-12" id="ladoB">
                    <h1>CLIENT</h1>
                    <div class="col-md-12">
                        <h3>Sou Funcionário</h3>
                            <div class="form-group">
                                <label class="col-sm-3">Usuário: </label>
                                <div class="col-sm-7">
                                    <input class="form-control form-control-sm" type="text" placeholder="Seu usuário">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3">&nbsp;&nbsp;&nbsp;&nbsp;Senha: </label>
                                <div class="col-sm-7">
                                    <input class="form-control form-control-sm" type="text" placeholder="Sua senha"><br>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-8">
                                    <a asp-page="/Funcionario" class="btn btn-custom btn-lg btn-block">Entrar</a>
                                </div>
                            </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
</body>
</html>